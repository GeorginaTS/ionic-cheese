{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "messages": {
      ".indexOn": ["timestamp"],
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$messageId": {
          ".validate": "newData.exists() && newData.hasChildren(['message', 'userId', 'userName', 'timestamp', 'roomId'])",
          "message": {
            ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 500"
          },
          "userId": {
            ".validate": "newData.isString() && newData.val() == auth.uid"
          },
          "userName": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "userAvatar": {
            ".validate": "newData.isString()"
          },
          "timestamp": {
            ".validate": "newData.isNumber()"
          },
          "roomId": {
            ".validate": "newData.isString() && newData.val() == $roomId"
          },
          "type": {
            ".validate": "newData.isString()"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },

    "rooms": {
      ".indexOn": ["createdAt"],
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['name', 'description', 'createdAt', 'createdBy'])",
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "description": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "createdBy": {
          ".validate": "newData.isString() && newData.val() == auth.uid"
        },
        "isActive": {
          ".validate": "newData.isBoolean()"
        },
        "maxUsers": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": false
        }
      }
    },

    "userPresence": {
      ".indexOn": ["lastSeen"],
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId",
        ".validate": "newData.hasChildren(['isOnline', 'lastSeen'])",
        "isOnline": {
          ".validate": "newData.isBoolean()"
        },
        "lastSeen": {
          ".validate": "newData.isNumber()"
        },
        "currentRoom": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": false
        }
      }
    },

    "typingIndicators": {
      "$roomId": {
        ".read": "auth != null",
        "$userId": {
          ".write": "auth != null && auth.uid == $userId",
          ".validate": "newData.hasChildren(['isTyping', 'timestamp'])",
          "isTyping": {
            ".validate": "newData.isBoolean()"
          },
          "timestamp": {
            ".validate": "newData.isNumber()"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    }
  }
}
